
<div id="all-beers">
    <div class="row">
    {{#each beers}}
        <div class="col-sm-4 beer">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.[image_url]}}" alt="Beer image">
                <div class="card-body">
                    <h5 class="card-title">{{this.[name]}}</h5>
                    <h6 class="card-title tagline">{{this.[tagline]}}</h6>
                    <p class="card-text">{{this.[description]}}</p>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>